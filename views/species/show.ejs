<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= species[0].displayName %></title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Species: <%= species[0].displayName %></h1>
    <% species.forEach((sighting, index) => { %>
    <h2>Sighting <%= index + 1 %>:</h2> 
    <p>Date: <%= sighting.formattedDate %></br> Location: <%= sighting.location %></p>
    <a href="/list/<%= sighting._id %>">Sighting Page</a>
    <% }) %>
    <a href="/species/<%= species[0].name %>/new">Add new <%= species[0].name %> sighting</a>
    <h2>Habitats:</h2>
    <ul>
    <% species.forEach((sighting, index) => { %>
        <% sighting.habitat.forEach((habitat, index) => { %>
            
        <li> <%= sighting.habitat %> </li>
        <% }) %>
    <% }) %>
    </ul>
</body>
</html>