<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Habitats</title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Habitats</h1>
    <ul>
        <% habitats.forEach(habitat => { %>
       <% if (habitat.country.some(item => {return item._id == user.country})) {%>
        <li><a href="/habitat/<%= habitat._id %>"><%= habitat.displayName %></a></li>
        <% }}) %>
    </ul>
    <form action="/habitat" method="POST">
    <label for="name"></label>
    <input type='text' name="name" id="newHabitat"/>
    <button type="submit">Add New Habitat</button>
    </form>
</body>
</html>